{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"./src/*"
			],
		}
	},
	"include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
	"exclude": ["node_modules", "dist"], 
	"references": [{ "path": "./tsconfig.node.json" }]
}
