{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            {"SwitchCase" : 1}
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "brace-style": [
            "error",
            "1tbs",
            { "allowSingleLine": true }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-return-assign": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "comma-spacing": [
            "error"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "space-before-blocks": [
            "error",
            "always"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ]
    }
}
